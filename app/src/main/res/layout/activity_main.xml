<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dori.sandbox.MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/winner_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/winning_bid"
        android:textAlignment="center"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/winner_bid_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/winner_bid_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textSize="52sp"
        android:text="@string/unknown_balance"
        app:layout_constraintBottom_toTopOf="@+id/runner_up_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winner_textview" />

    <TextView
        android:id="@+id/runner_up_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/runner_up_bid"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/runner_up_bid_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winner_bid_textview" />

    <TextView
        android:id="@+id/runner_up_bid_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_balance"
        app:layout_constraintBottom_toTopOf="@+id/refresh_bids_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runner_up_textview" />

    <Button
        android:id="@+id/refresh_bids_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:onClick="showBids"
        android:text="@string/current_winning_bid_button"
        app:layout_constraintBottom_toTopOf="@+id/my_balance_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runner_up_bid_textview" />

    <TextView
        android:id="@+id/my_balance_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/unknown_balance"
        app:layout_constraintBottom_toTopOf="@+id/my_balance_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/my_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="updateBalance"
        android:text="@string/refresh_balance_button"
        app:layout_constraintBottom_toTopOf="@+id/offer_hint_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/offer_hint_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/offer_edittext"
        app:layout_constraintStart_toStartOf="@id/offer_edittext" />

    <EditText
        android:id="@+id/offer_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="@string/edit_offer"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/offer_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/offer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="offer"
        android:text="@string/button_send"
        app:layout_constraintBaseline_toBaselineOf="@+id/offer_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/offer_edittext" />


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dori.sandbox.MainActivity"
    tools:ignore="ExtraText">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bid_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TableRow>
            <TextView
                android:id="@+id/winner_text_view"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/winner_title"
                android:textAlignment="textStart"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/winner_bid_text_view"
                android:text="@string/unknown_balance"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@id/winner_text_view"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/runner_up_text_view"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/runner_up_title"
                android:textAlignment="textStart"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/runner_up_bid_text_view"
                android:text="@string/unknown_balance"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@id/runner_up_bid_text_view"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/refresh_bids_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="showBids"
        android:text="@string/current_winning_bid_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bid_table"
        />

    <TextView
        android:id="@+id/my_balance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/unknown_balance"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/my_balance_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/my_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="updateBalance"
        android:text="@string/refresh_balance_button"
        app:layout_constraintBottom_toTopOf="@id/fb_logout_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/fb_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/offer_edit_text"
        android:onClick="logout"
        />

    <TextView
        android:id="@+id/offer_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/offer_edit_text"
        app:layout_constraintStart_toStartOf="@id/offer_edit_text"
        />

    <EditText
        android:id="@+id/offer_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/edit_offer"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/offer_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/offer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="offer"
        android:text="@string/button_send"
        app:layout_constraintBaseline_toBaselineOf="@+id/offer_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/offer_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/offer_edit_text"
        />


</android.support.constraint.ConstraintLayout>
